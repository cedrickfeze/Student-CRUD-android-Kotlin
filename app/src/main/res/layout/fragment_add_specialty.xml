<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.specialty.addSpecialty">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:text="Add Specialty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtFname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Name:" />
        <EditText
            android:id="@+id/edtNameSpecialty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Enter Specialty Name"
            android:inputType="textPersonName"  />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Description:" />
        <EditText
            android:id="@+id/edtDescSpecialty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Enter Specialty Description"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:weightSum="4"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:id="@+id/autoCompleteDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Select Department"
            android:completionThreshold="1"
            android:completionHint="Select Department"
            android:gravity="center"
            android:inputType="text"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnInsertSpecialty"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD specialty" />



</LinearLayout>
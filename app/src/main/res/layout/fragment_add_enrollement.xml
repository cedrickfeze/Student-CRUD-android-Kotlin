<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.enrollement.AddEnrollement">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:text=" Add Enrollement" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="12dp"
        android:layout_marginStart="100dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtYearEnrollement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Academic year"
            android:inputType="number"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:weightSum="4"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:id="@+id/autoCompleteStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Select Student"
            android:completionThreshold="1"
            android:completionHint="Select Department"
            android:gravity="center"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:weightSum="4"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:id="@+id/autoCompleteSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Select Specialty"
            android:completionThreshold="1"
            android:completionHint="Select Department"
            android:gravity="center"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:weightSum="4"
        android:orientation="horizontal">


        <AutoCompleteTextView
            android:id="@+id/autoCompleteLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="Select Level"
            android:completionThreshold="1"
            android:completionHint="Select Department"
            android:gravity="center"
            android:inputType="text"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btnAddEnrollement"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enroll" />



</LinearLayout>